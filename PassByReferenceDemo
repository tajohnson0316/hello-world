package com.demo.arraydemo;

public class PassByReferenceDemo {
    //Method demonstrating that any alterations to an array done by a method affects the original array
    public static void passByReference(String[] a) {
        a[0] = "Changed";
    }

    public static void main(String[] args) {

        String[] b = {"Apple", "Mango", "Orange"};

        System.out.println("Before Function Call: " + b[0]); //Prints the OG data at b[0]
        PassByReferenceDemo.passByReference(b); //Calls the method that alters the data
        System.out.println("After Function Call: " + b[0]); //Prints the new data
    }
}
